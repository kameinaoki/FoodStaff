<div class="title">
  <h2>いいねした投稿一覧</h2>
</div>

<div class="favorites">
  <% @favorite_recipes.each do |favorite_recipe| %>
  
    <%= link_to recipe_path(favorite_recipe) do %>
      <!--料理名-->
      <p><%= favorite_recipe.cooking_name %></p>
      <!--料理画像-->
      <%= attachment_image_tag favorite_recipe, :recipe_image %>
    <% end %>
    
    <!--調理内容-->
    <p><%= favorite_recipe.recipe_content %></p>
  <% end %>
</div>