<div class="title">
  <h2>ユーザー情報</h2>
</div>

<div class="form">
  <%= form_with model:@user, url:user_path, local:true do |f| %>
  
    <!--ユーザー名-->
    <div class="form_group">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, autofocus: true %>
    </div>
    
    <!--ユーザー画像-->
    <div class="form_group">
      <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg" %>
      <%= f.attachment_field :profile_image %>
    </div>
    
    <div class="form_group">
      <%= f.label :introduction, "自己紹介" %><br />
      <%= f.text_area :introduction %>
    </div>
    
    <!--投稿ボタン-->
    <div class="form_group">
      <%= f.submit "変更を保存する", class: "btn btn-success" %>
    </div>
    
  <% end %>
</div>