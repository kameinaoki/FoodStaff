<div class="container">
  <h2 class="text-center">ユーザー情報編集</h2>

  <hr/>
  
  <div class="row">
    <%= form_with model:@user, url:user_path, local:true do |f| %>
    
      <!--ユーザー画像-->
      <div class="co-md-5">
        <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg" %><br/>
        <%= f.attachment_field :profile_image %>
      </div>
      
      <!--ユーザー名-->
      <div class="col-md-7">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, autofocus: true %>
        <%= f.label :introduction, "自己紹介" %><br />
        <%= f.text_area :introduction %>
        <%= f.submit "変更を保存する", class: "btn btn-success" %>
      </div>
      
    <% end %>
  </div>
</div>