<div class="container">
  <h2 class="text-center">Food Staff へようこそ！</h2>
  
  <hr/>
  
  <div class="recipes">
    <h4 class="mt-5 text-center">★人気トップ５★</h4>
    <% @all_ranks.each do |recipe| %>
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-4">
            <%= link_to recipe_path(recipe) do %>
              <%= attachment_image_tag recipe, :recipe_image, class: 'recipe-card-img' %>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to recipe_path(recipe) do %>
                  <p><%= recipe.cooking_name %></p>
                <% end %>
              </h5>
              <p class="card-text">
                <!--ログインしている場合-->
                <% if user_signed_in? %>
                <div id="favorite_buttons_<%= recipe.id %>">
                  <%= render "favorites/favorite", recipe: recipe %>
                </div>
                <!--ログインしていない場合-->
                <% else %>
                  ♡<%= recipe.favorites.count %> いいね
                <% end %>
              </p>
              <br />
              <p class="card-text"><small class="text-muted">投稿ユーザー：<%= recipe.user.name %></small></p>
              <p class="card-text">コメント件数：<%= recipe.recipe_comments.count %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
</div>