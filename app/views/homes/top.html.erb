<div class="title">
  <h2>Food Staff へようこそ！</h2>
</div>

<div class="recipes-ranks">
  <% @all_ranks.each do |recipe| %>
    <%= link_to recipe_path(recipe.id) do %>
      <p><%= recipe.cooking_name %></p>
    <% end %>
    
    <%= link_to recipe_path(recipe.id) do %>
      <%= attachment_image_tag recipe, :recipe_image %>
    <% end %>
    
    <p><%= recipe.favorites.count %> いいね</p>
    
  <% end %>
</div>